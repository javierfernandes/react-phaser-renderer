{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "codeFrame": false
  },
  "plugins": ["node", "jest"],
  "env": {
    "es6": true,
    "browser": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:react/recommended"],
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "comma-dangle": 0,
    "semi": 0,
    "max-len": 0,
    "no-multiple-empty-lines": 0,
    "object-shorthand": 0,
    "padded-blocks": 0,

    "node/no-unsupported-features": 0
  }
}